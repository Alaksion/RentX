<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RentX" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RentX.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/app_black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewTitle">
        <item name="android:fontFamily">@font/archivo_bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/app_title_grey</item>
    </style>

    <style name="TextViewTitleWhite">
        <item name="android:fontFamily">@font/archivo_bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewText">
        <item name="android:fontFamily">@font/archivo_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_text_grey</item>
    </style>

    <style name="TextViewBoldText">
        <item name="android:fontFamily">@font/archivo_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/app_title_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewTextWhite">
        <item name="android:fontFamily">@font/archivo_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewTextLightGrey">
        <item name="android:fontFamily">@font/archivo_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_text_detail</item>
    </style>


    <style name="TextViewTextSecondary">
        <item name="android:fontFamily">@font/archivo_regular</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/app_secundary_grey</item>
    </style>

    <style name="ButtonRed">
        <item name="android:backgroundTint">@color/app_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ButtonBlack">
        <item name="android:backgroundTint">@color/app_dark_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="EditText">
        <item name="android:background">@color/app_input_background</item>
        <item name="android:padding">25dp</item>
    </style>
    
    <style name="CheckBox">
        <item name="android:padding">2dp</item>
        <item name="background">@color/app_input_background</item>
        <item name="android:textColor">@color/app_text_detail</item>
        <item name="buttonTint">@color/app_title_grey</item>
    </style>

    <style name="IconBox">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:background">@color/app_input_background</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>

    <style name="CarList_FieldText">
        <item name="android:fontFamily">@font/archivo_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/app_text_detail</item>
    </style>

    <style name="CarList_ModelText">
        <item name="android:fontFamily">@font/archivo_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/app_title_grey</item>
    </style>

    <style name="CarList_PriceText">
        <item name="android:fontFamily">@font/archivo_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/app_red</item>
    </style>

</resources>